@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
    ViewBag.Title = Model?.Value("aboutPageTitle") ?? null;

    var globeLeft = Model?.Value<IPublishedContent>("contactBackgroundImageLeft")?.Url() ?? "";
    var globeRight = Model?.Value<IPublishedContent>("contactBackgroundImageRight")?.Url() ?? "";

    var companyOne = Model?.Value<IPublishedContent>("companyImageOne")?.Url() ?? "";
    var companyTwo = Model?.Value<IPublishedContent>("companyImageTwo")?.Url() ?? "";
    var companyThree = Model?.Value<IPublishedContent>("companyImageThree")?.Url() ?? "";
    var companyFour = Model?.Value<IPublishedContent>("companyImageFour")?.Url() ?? "";
    var companyFive = Model?.Value<IPublishedContent>("companyImageFive")?.Url() ?? "";
    var companySix = Model?.Value<IPublishedContent>("companyImageSix")?.Url() ?? "";
}

<section id="contact-welcome" class="contact-welcome">
    <img class="globeLeft" src="@globeLeft" alt="@Model?.Value("contactBackgroundImageLeft")">
    <div class="container">
        <div class="content">
            <h1>@Model?.Value("contactWelcomeTitle")</h1>
            <div class="about-directions">
                <a href="@Model?.Value("contactHomeUrl")"> @Model?.Value("contactHomeDirection") </a>
                <i class="fa-solid fa-arrow-right"></i>
                <p>@Model?.Value("contactCurrentPage")</p>
            </div>
        </div>
    </div>
    <img class="globeRight" src="@globeRight" alt="@Model?.Value("contactBackgroundImageRight")">
</section>

<section id="contact-contact" class="about-contact">
    <div class="container">
        <div class="background-contact">
            <img class="contactBackground" src="/images/background-image-about-us.svg">
            <img class="contactMember" src="/images/about-us-last-member.png">
        </div>
        <div class="about-contact-info">
            <h2>Let us know about your next project</h2>
            <div class="about-office-location">
                <p class="example-info"><i class="fa-solid fa-location-dot"></i>Office location</p>
                <p class="office-info">@Model?.Value("contactLocation")</p>
            </div>
            <div class="about-office-location">
                <p class="example-info"><i class="fa-solid fa-phone-flip"></i>Phone number</p>
                <p class="office-info">@Model?.Value("contactPhone")</p>
            </div>
            <div class="about-office-location">
                <p class="example-info"><i class="fa-regular fa-envelope"></i>E-mail address</p>
                <p class="office-info">@Model?.Value("contactMail")</p>
            </div>
        </div>
    </div>
</section>

<section id="map-form" class="map-form">
    <img class="background" src="~/images/map 1.png" />
    <div class="container">
        <div class="form-text">
            <h5>Request a call back</h5>
            <h2>Let us know about your next project</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas consectetur, ligula semper sagittis lobortis, eros metus efficitur purus</p>
        </div>
        <div class="contact-form">
            <form>
                <div class="form-row">
                    <input type="text" placeholder="Name" name="name" />
                    <input type="text" placeholder="Phone" name="phone" />
                </div>
                <div class="form-row">
                    <input type="text" placeholder="Email Address" name="email" />
                    <div class="input-with-icon">
                        <input type="text" placeholder="Financial consulting" name="menu" />
                        <i class="fa-solid fa-caret-down"></i>
                    </div>
                </div>
            </form>
        </div>
        <div class="submit-contact">
            <button>Submit</button>
        </div>
    </div>
</section>

<section id="company-customers" class="company-customers">
    <div class="container">
        <img class="companyImage" src="@companyOne">
        <img class="projectImage" src="@companyTwo">
        <img class="projectImage" src="@companyThree">
        <img class="projectImage" src="@companyFour">
        <img class="projectImage" src="@companyFive">
        <img class="projectImage" src="@companySix">
    </div>
</section>