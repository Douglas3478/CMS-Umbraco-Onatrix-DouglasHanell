@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
	var pageTitle = !string.IsNullOrEmpty(ViewBag.Title) ? $"{ViewBag.Title} │ Onatrix" : "Onatrix - Financial Solutions for Your Business";
}

<html lang="en"> 
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@pageTitle</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

	<link rel="stylesheet" href="/css/main.css">
</head>
<body>
	<div class="wrapper">
		<header>
			<section class="topbar">
                <div class="container">
					<div class="address">Klarabergsviadukten 90, 111 64 Stockholm</div>
					<div class="socialmedia">
						<a href="#"><i class="fa-brands fa-facebook-f"></i></a>
						<a href="#"><i class="fa-brands fa-twitter"></i></a>
						<a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
					</div>
				</div>
            </section>
			<div class="navbar">
				<div class="container">
					<a href="/" class="logo">
						<img src="~/images/OnatrixLogo.svg" />
					</a>
					<nav>
						<a class="nav-link" href="/about">About</a>
						<a class="nav-link" href="/services">Services</a>
						<a class="nav-link" href="/projects">Projects</a>
						<a class="nav-link" href="/contact">Contact</a>
					</nav>
					<div class="search">
						<i class="fa-solid fa-magnifying-glass"></i>
					</div>
				</div>
			</div>
		</header>

		<main>
			@RenderBody()
		</main>

		<footer>
			<div class="container">
				<p class="copyright">© Onatrix. All Rights Reserved.</p>
				<p class="credits">Credits to <a href="https://themeforest.net/user/themesflat">Themesflat</a></p>
			</div>
		</footer>
	</div>

	<script src="/scripts/main.js"></script>
</body>
</html>